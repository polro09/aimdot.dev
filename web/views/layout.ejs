    <script>
        // ë¡œë”© í™”ë©´ ê°œì„ 
        const hasVisited = sessionStorage.getItem('hasVisited');
        const loadingScreen = document.getElementById('loadingScreen');
        const loadingText = document.getElementById('loadingText');
        
        if (hasVisited) {
            loadingScreen.style.display = 'none';
        } else {
            sessionStorage.setItem('hasVisited', 'true');
            
            const loadingSteps = [
                { text: 'ì‹œìŠ¤í…œ ì´ˆê¸°í™” ì¤‘...', duration: 300 },
                { text: 'API ì—°ê²° ì¤‘...', duration: 500 },
                { text: 'ëª¨ë“ˆ ë¡œë”© ì¤‘...', duration: 400 },
                { text: 'ì‚¬ìš©ì ì •ë³´ í™•ì¸ ì¤‘...', duration: 600 },
                { text: 'ì¸í„°í˜ì´ìŠ¤ ì¤€ë¹„ ì¤‘...', duration: 400 },
                { text: 'ì™„ë£Œ!', duration: 200 }
            ];
            
            let currentStep = 0;
            let totalDuration = 0;
            
            function updateLoadingText() {
                if (currentStep < loadingSteps.length) {
                    loadingText.textContent = loadingSteps[currentStep].text;
                    totalDuration += loadingSteps[currentStep].duration;
                    
